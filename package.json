    "dotenv": "^16.3.1",
    "puppeteer": "^21.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
